<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        >
        <shape
            android:shape="ring"
            android:thicknessRatio="81"
            android:useLevel="false">
            <gradient
                android:angle="270"
                android:centerColor="#20234e"
                android:centerX="0.75"
                android:endColor="#20234e"
                android:startColor="#20234e" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="81"
                android:useLevel="false">
                <gradient
                    android:angle="180"
                    android:endColor="@color/upGrad_700"
                    android:startColor="@color/downGrad_700" />
            </shape>
        </rotate>
    </item>

</layer-list>