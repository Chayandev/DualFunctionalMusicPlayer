<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--   Style for rounded corners -->
    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="FullRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ThemeOverlay.SearchView" parent="">
    <!-- Text color -->
    <item name="android:editTextColor">@color/white</item>
    <!-- Hint text color -->
    <item name="android:textColorHint">@color/transhparent_gray</item>
        <item name="colorControlActivated">@color/gray</item>
    </style>
    <style name="Widget.Base.Theme.CDMusicPlayer.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="enableEdgeToEdge">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>