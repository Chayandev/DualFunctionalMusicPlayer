<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" />
            <gradient
                android:angle="270"
                android:centerColor="#20234e"
                android:centerY="0.75"
                android:endColor="#20234e"
                android:startColor="#20234e" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/downGrad_500"
                    android:centerY="0.75"
                    android:endColor="@color/upGrad_500"
                    android:startColor="@color/downGrad_500" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                <gradient
                    android:angle="180"
                    android:endColor="@color/upGrad_700"
                    android:startColor="@color/downGrad_700" />
            </shape>
        </clip>
    </item>

</layer-list>